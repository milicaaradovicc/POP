<Window x:Class="WPF.Ponuda.OfferDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Ponuda"
        mc:Ignorable="d"
          Title="Details" Height="496" Width="332">
    <Grid Margin="10">
       <StackPanel>
            <TextBlock Text="Marka:" FontWeight="Bold"/>
            <TextBlock x:Name="MarkaTextBlock" Margin="0,0,0,10"/>

            <TextBlock Text="Model:" FontWeight="Bold"/>
            <TextBlock x:Name="ModelTextBlock" Margin="0,0,0,10"/>

            <TextBlock Text="Godište:" FontWeight="Bold"/>
            <TextBlock x:Name="GodisteTextBlock" Margin="0,0,0,10"/>

            <TextBlock Text="Snaga:" FontWeight="Bold"/>
            <TextBlock x:Name="SnagaTextBlock" Margin="0,0,0,10"/>

            <TextBlock Text="Pogon:" FontWeight="Bold"/>
            <TextBlock x:Name="PogonTextBlock" Margin="0,0,0,10"/>
        </StackPanel>

        <StackPanel Margin="0,230,20,-30">
            <TextBlock Text="Prodavac:" FontWeight="Bold"/>
            <TextBlock x:Name="ProdavacTextBlock" Margin="0,0,0,10"/>

            <TextBlock Text="Cena prodaje:" FontWeight="Bold"/>
            <TextBlock x:Name="CenaProdajeTextBlock" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>

