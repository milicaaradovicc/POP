<Window x:Class="WPF.Ponuda.ShoppingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Ponuda"
        mc:Ignorable="d"
   Title="Kupovina Automobila" Height="350" Width="468" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Cena Prodaje:" Grid.Row="0" Grid.Column="0" FontWeight="Bold" Margin="0,5"/>
        <TextBlock Name="CenaProdajeTextBlock" Grid.Row="0" Grid.Column="1" Margin="5,5"/>

        <TextBlock Text="Datum Prodaje:" Grid.Row="1" Grid.Column="0" FontWeight="Bold" Margin="0,5"/>
        <TextBlock Name="DatumProdajeTextBlock" Grid.Row="1" Grid.Column="1" Margin="5,5"/>

        <TextBlock Text="Ime Kupca:" Grid.Row="2" Grid.Column="0" FontWeight="Bold" Margin="0,10,5,0"/>
        <TextBox Name="ImeKupcaTextBox" Grid.Row="2" Grid.Column="1" Margin="24,10,0,26" Grid.RowSpan="2"/>

        <TextBlock Text="Prezime Kupca:" Grid.Row="3" Grid.Column="0" FontWeight="Bold" Margin="0,5"/>
        <TextBox Name="PrezimeKupcaTextBox" Grid.Row="3" Grid.Column="1" Margin="24,5,0,26" Grid.RowSpan="2"/>

        <TextBlock Text="Broj Lične Karte:" Grid.Row="4" Grid.Column="0" FontWeight="Bold" Margin="0,5"/>
        <TextBox Name="BrojLicneKarteTextBox" Grid.Row="4" Grid.Column="1" Margin="24,5,0,45" Grid.RowSpan="2"/>

        <Button Content="Kupi" Grid.Row="5" Grid.ColumnSpan="2" Margin="0,15,0,0" Height="30" Width="100"
                HorizontalAlignment="Center" Click="KupiAutomobil_Click"/>
    </Grid>
</Window>
