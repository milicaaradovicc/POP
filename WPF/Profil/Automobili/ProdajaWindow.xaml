<Window x:Class="WPF.Profil.Automobili.ProdajaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Profil.Automobili"
        mc:Ignorable="d"
        Title="Prodaja" Height="350" Width="600">
    <Grid>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0" Text="Cena Nabavke:"/>
        <TextBlock x:Name="CenaNabavkeTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,20,0,0" Width="200"/>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,60,0,0" Text="Datum Nabavke:"/>
        <TextBlock x:Name="DatumNabavkeTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,60,0,0" Width="200"/>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,100,0,0" Text="Cena Prodaje:"/>
        <TextBox x:Name="CenaProdajeTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,100,0,0" Width="200"/>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,140,0,0" Text="Datum Prodaje:"/>
        <DatePicker x:Name="DatumProdajePicker" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,140,0,0" Width="200" IsEnabled="False"/>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,180,0,0" Text="Ime Kupca:"/>
        <TextBox x:Name="ImeKupcaTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,180,0,0" Width="200"/>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,220,0,0" Text="Prezime Kupca:"/>
        <TextBox x:Name="PrezimeKupcaTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,220,0,0" Width="200"/>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,260,0,0" Text="Broj Lične Karte:"/>
        <TextBox x:Name="BrojLicneKarteTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,260,0,0" Width="200"/>

        <Button Content="Potvrdi Prodaju" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20" Width="120" Click="ConfirmSaleButton_Click"/>
    </Grid>
</Window>

