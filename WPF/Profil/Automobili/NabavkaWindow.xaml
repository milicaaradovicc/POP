<Window x:Class="WPF.Profil.Automobili.NabavkaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Profil.Automobili"
        mc:Ignorable="d"
        Title="NabavkaWindow" Height="300" Width="400">
    <Grid>
        <Label Content="Datum nabavke:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,40,0,0"/>
        <DatePicker Name="DatumNabavkeDatePicker" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,40,0,0" Width="200"/>

        <Label Content="Cena nabavke:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,80,0,0"/>
        <TextBox Name="CenaNabavkeTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="150,80,0,0"/>

        <Button Name="SaveButton" Content="Dodaj Poslovne Info" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="150,120,0,0" Click="SaveButton_Click"/>
    </Grid>
</Window>
