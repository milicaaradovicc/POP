<Window x:Class="WPF.Profil.Automobili.AutomobiliWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Profil.Automobili"
        mc:Ignorable="d"
        Title="Automobili" Height="450" Width="800">
    
    <DockPanel>
        
        <Menu DockPanel.Dock="Top" Background="#FF834C35" Foreground="White">
            <MenuItem Header="Upravljanje">
                <MenuItem Header="Automobili" Background="#FF834C35"/>
                <MenuItem Header="Korisnici"  Click="Korisnici_Click"  Background="#FF834C35"/>
                <MenuItem Header="Zarada" Click="Zarada_Click" Background="#FF834C35"/>
            </MenuItem>
            <MenuItem Header="Profil" Click="Profil_Click"></MenuItem>
            <MenuItem Header="Pocetna stranica" Click="PocetnaStranica_Click"/>
            <MenuItem Header="Ponuda" Click="Ponuda_Click"/>
            <MenuItem Header="Logout" Click="Logout_Click"/>
        </Menu>

        <ToolBar DockPanel.Dock="Top" Background="#FFBC8F8F">
            <Border Margin="5">
                <Button Name="DetailsBtn" Content="Detalji" Width="75" Click="DetailsButton_Click"/>
            </Border>
            <Border>
                <Button Name="InfoCarBtn" Content="Poslovne informacije" Click="PoslovneInfo_Click" Margin="5" Width="120" />
            </Border>
            <Border Margin="5">
                <Button Name="AddCarBtn" Content="Dodaj"  Width="75" Click="AddCarButton_Click"/>
            </Border>
            <Border>
                <Button Name="EditCarBtn" Content="Izmeni" Margin="5" Width="75" Click="EditCarButton_Click"/>
            </Border>
            <Border>
                <Button Name="DeleteCarBtn" Content="Obriši" Margin="5" Width="75" Click="DeleteCarButton_Click"/>
            </Border>
            <Border>
                <Button Name="SellCarBtn" Content="Prodaj" Margin="5" Width="75" Click="SellCarButton_Click"/>
            </Border>
        </ToolBar>

        <DataGrid 
            Name="CarsDataGrid"
            AutoGenerateColumns="False"
            Margin="10"
            IsReadOnly="True"
            FontSize="14"
            LoadingRow="CarsDataGrid_LoadingRow">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="*" Visibility="Collapsed" />
                <DataGridTextColumn Header="Marka" Binding="{Binding Marka.Naziv}" Width="*" />
                <DataGridTextColumn Header="Država Nastanka" Binding="{Binding Marka.DrzavaNastanka}" Width="*" />
                <DataGridTextColumn Header="Model" Binding="{Binding Model.NazivModela}" Width="*" />
                <DataGridTextColumn Header="Godište" Binding="{Binding Godiste}" Width="*" />
                <DataGridTextColumn Header="Snaga" Binding="{Binding Snaga}" Width="*" />
                <DataGridTextColumn Header="Pogon" Binding="{Binding PogonDisplay}" Width="*" />

            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>

</Window>
