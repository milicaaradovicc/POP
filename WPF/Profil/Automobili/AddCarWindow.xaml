<Window x:Class="WPF.Automobili.AddCarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Automobili"
        mc:Ignorable="d"
        Title="Add Car" Height="428" Width="627">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Marka:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,60,0,0" FontWeight="Bold"/>
        <TextBox Name="MarkaTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="7,60,0,0" Grid.Column="1"/>

        <Label Content="Država Nastanka:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,100,0,0" FontWeight="Bold"/>
        <TextBox Name="DrzavaTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="7,100,0,0" Grid.Column="1"/>

        <Label Content="Model:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,140,0,0" FontWeight="Bold"/>
        <TextBox Name="ModelTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="7,140,0,0" Grid.Column="1"/>

        <Label Content="Godište:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,180,0,0" FontWeight="Bold"/>
        <TextBox Name="GodisteTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="7,180,0,0" Grid.Column="1"/>

        <Label Content="Snaga:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,220,0,0" FontWeight="Bold"/>
        <TextBox Name="SnagaTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="7,220,0,0" Grid.Column="1"/>

        <Label Content="Pogon:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,260,0,0" FontWeight="Bold"/>
        <ComboBox Name="PogonComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="7,260,0,0" Grid.Column="1"/>



        <Button Name="NextButton" Content="Dalje" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="7,300,0,0" Click="NextButton_Click" Grid.Column="1"/>

    </Grid>
</Window>
