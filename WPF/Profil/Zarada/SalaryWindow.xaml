<Window x:Class="WPF.Profil.Zarada.SalaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Profil.Zarada"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="Zarada" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Background="#FF834C35" Foreground="White">
            <MenuItem Header="Upravljanje">
                <MenuItem Header="Automobili" Click="Automobili_Click" Background="#FF834C35"/>
                <MenuItem Header="Korisnici"  Click="Korisnici_Click"  Background="#FF834C35"/>
                <MenuItem Header="Zarada" Background="#FF834C35"/>
            </MenuItem>
            <MenuItem Header="Profil" Click="Profil_Click"></MenuItem>
            <MenuItem Header="Pocetna stranica" Click="PocetnaStranica_Click"/>
            <MenuItem Header="Ponuda" Click="Ponuda_Click"/>
            <MenuItem Header="Logout" Click="Logout_Click"/>
        </Menu>

        <ToolBar Grid.Row="1" Background="#FFBC8F8F">
            <Border Margin="5">
                <Button Name="DetailsBtn" Content="Izvestaj" Width="75" Click="Account_Click" />
            </Border>
        </ToolBar>

        <DataGrid Grid.Row="2"
                  Name="SalaryDataGrid"
                  AutoGenerateColumns="False"
                  Margin="10"
                  IsReadOnly="True"
                  FontSize="14"
                  Visibility="Visible">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Marka Automobila" Binding="{Binding Automobil.Marka.Naziv}" Width="*" />
                <DataGridTextColumn Header="Model Automobila" Binding="{Binding Automobil.Model.NazivModela}" Width="*" />
                <DataGridTextColumn Header="Datum Prodaje" Binding="{Binding DatumProdaje, StringFormat={}{0:dd.MM.yyyy}}" Width="*" />
                <DataGridTextColumn Header="Profit" Binding="{Binding Profit, StringFormat={}{0:0.00}€}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Ukupna Zarada: " FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="18" FontFamily="Yu Gothic" />
            <TextBlock Name="TotalEarningsText" Text="0.00€" FontWeight="Bold" FontSize="18" VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
