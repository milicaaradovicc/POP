<Window x:Class="WPF.Profil.KorisnikDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Profil"
        mc:Ignorable="d"
        Title="Podaci o korisniku" Height="445" Width="332">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="127*"/>
            <ColumnDefinition Width="185*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2" Margin="0,33,0,-33">

            <TextBlock Text="Ime: " FontWeight="Bold"/>
            <TextBlock Text="{Binding Ime}" Margin="0,0,0,10"/>

            <TextBlock Text="Prezime:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Prezime}" Margin="0,0,0,10"/>

            <TextBlock Text="Korisnicko ime: " FontWeight="Bold"/>
            <TextBlock Text="{Binding KorisnickoIme}" Margin="0,0,0,10"/>

            <TextBlock Text="Lozinka:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Lozinka}" Margin="0,0,0,10"/>

            <TextBlock Text="JMBG:" FontWeight="Bold"/>
            <TextBlock Text="{Binding JMBG}" Margin="0,0,0,10"/>

        </StackPanel>
    </Grid>
</Window>
