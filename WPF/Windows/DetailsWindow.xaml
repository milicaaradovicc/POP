<Window x:Class="WPF.Windows.DetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Windows"
        mc:Ignorable="d"
        Title="Details" Height="496" Width="332">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="ID:" FontWeight="Bold"/>
            <TextBlock Text="{Binding ID}" Margin="0,0,0,10"/>

            <TextBlock Text="Marka:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Marka.Naziv}" Margin="0,0,0,10"/>

            <TextBlock Text="Država Nastanka:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Marka.DrzavaNastanka}" Margin="0,0,0,10"/>

            <TextBlock Text="Model:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Model.NazivModela}" Margin="0,0,0,10"/>

            <TextBlock Text="Godište:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Godiste}" Margin="0,0,0,10"/>

            <TextBlock Text="Snaga:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Snaga}" Margin="0,0,0,10"/>

            <TextBlock Text="Pogon:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Pogon}" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>
