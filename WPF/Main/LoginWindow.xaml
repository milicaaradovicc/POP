<Window x:Class="WPF.Main.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Main"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="500">
    <Grid HorizontalAlignment="Stretch" Background="#FFC4A89C">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Username -->
        <TextBlock Text="Korisnicko ime" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,80,0,0" 
           FontSize="20" FontFamily="Cascadia Code" Foreground="White" Width="119" TextWrapping="Wrap"/>

        <TextBox Name="KorisnickoImeTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="197,80,0,0" 
                 Width="200" Height="30" FontSize="16" Grid.ColumnSpan="2"/>

        <!-- Password -->
        <TextBlock Text="Lozinka" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,165,0,0" 
                   FontSize="20" FontFamily="Cascadia Code" Foreground="White"/>
        <PasswordBox Name="LozinkaPasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="197,162,0,0" 
                     Width="200" Height="30" FontSize="16" Grid.ColumnSpan="2"/>

        <!-- Login Button -->
        <Button Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="225,227,0,0" 
                Width="144" Height="46" FontSize="18" Click="LoginButton_Click" 
                Background="#FFF9F9F9" FontFamily="Cascadia Code SemiBold" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
